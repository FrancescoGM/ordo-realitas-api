{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@infra/*": ["infra/*"],
      "@core/*": ["core/*"],
      "@config/*": ["config/*"]
    },
    "typeRoots": ["./src/@types/**/*.d.ts"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist"]
}
