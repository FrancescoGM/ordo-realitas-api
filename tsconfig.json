{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["@types/jest", "node"],
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@errors/*": ["errors/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"],
      "@shared/*": ["shared/*"]
    },
    "typeRoots": ["./src/@types/**/*.d.ts"]
  }
}
