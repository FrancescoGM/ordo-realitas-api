{
  "name": "ordo-realitas-api",
  "version": "1.0.0",
  "description": "The ordo realitas api",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev:server": "tsnd --respawn --transpile-only --ignore-watch node_modules --exit-child --clear -r tsconfig-paths/register src/infra/http/server.ts",
    "lint:fix": "npm run lint:fix:eslint && npm run lint:fix:prettier",
    "lint:fix:eslint": "eslint --fix",
    "lint:fix:prettier": "prettier --write '**/*.{json,js,ts}'",
    "prepare": "husky install",
    "commit": "cz",
    "test": "cross-env NODE_ENV=test docker-compose -f docker-compose.test.yml up -d && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "3.9.2",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "pg": "^8.7.3",
    "prettier": "^2.5.1",
    "prisma": "^3.9.2",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  },
  "homepage": "https://ordo-realitas.com.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/FrancescoGM/ordo-realitas-api.git"
  },
  "author": "Francesco Gonzalez Muller <francescogmuller@hotmail.com> (https://github.com/FrancescoGM)",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
